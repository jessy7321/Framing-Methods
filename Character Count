#include <stdio.h>
#include <string.h>

int main()
{
    char msg[50], ch = 'y';
    int frame_count = 0,ch_count = 0,i;
    do{
        frame_count++;
        printf("\nFrame number: %d",frame_count);
        printf("\nEnter the message: ");
        scanf("%s",msg);
        printf("The frame is %d%s",(strlen(msg)+1),msg);
        printf("\nAnother message: (y/n)?");
        scanf(" %c",&ch);
    }while(ch == 'y');
    printf("\nEnd of process");
    return 0;
}
